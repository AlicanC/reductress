    "babel-eslint": "^8.2.4",
    "babel-jest": "^23.0.1",
    "codecov": "^3.0.2",
    "eslint": "^5.0.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "flow-bin": "^0.75.0",
    "jest": "^23.1.0",
    "lerna": "^2.11.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.5"
  }
